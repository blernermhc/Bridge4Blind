<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">

  <properties>
    <property name="name">bridge4blind</property>
    <property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %p %C:%L | %msg%n</property>
    <!-- 
	 It will look like that:
	 2013-04-03 07:37:51.993 [009-exec-1] WARN com.clickshare.CLASSNAME:LINENUM | MESSAGE
    -->
  </properties>

  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"/>
    </Console>
  </appenders>

  <loggers>
    <root level="error"> <!-- We start logging only errors -->
      <appender-ref ref="Console"/> <!-- To console -->
    </root>
  </loggers>

</configuration>
  
